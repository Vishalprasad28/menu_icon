{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {% if custom %}
        <div class="user-info">
          {% if custom.picture %} 
            <a class="user-related-links" href="{{custom.user_url}}"> <img src="{{file_url(custom.picture)}}" alt=""> </a>
          {% endif %}
          <div class="info">
            <a class="user-related-links" href="{{custom.user_url}}"><h4>{{custom.name}}</h4></a>
            <a class="user-related-links" href="https://mail.google.com/mail/?view=cm&fs=1&tf=1&to={{custom.email}}" target="_blank">{{custom.email}}</a>
          </div>
        </div>
    {% endif %}
    {{ content }}
  </div>
{% endif %}
